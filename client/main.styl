#login-buttons {
  margin: 10px 15px;
  .login-link-text {
    color: #b2dbfb;
  }
  .login-link-text:hover {
    color: white;
  }
}

.list-group-item {
  margin-top: 15px;
  height: 68px;
}

footer {
  background-color: #f5f5f5;
  position: absolute;
  bottom: 0;
  width: 100%;
  display: flex;
  align-items: center;
  padding: 10px;
  .input-group {
    width: 30%;
  }
  > div {
    margin: 0 10px;
  }
}

